<div class="h-screen">
  <%= render 'shared/navbar' %>

  <div class="flex">
    <div class="w-1/2 border-r border-black ">

      <!-- SEARCH -->
      <div class="sticky top-0 bg-white py-6 mb-6">
        <%= render 'shared/searchbar' %>
      </div>
      <!-- SEARCH -->

      <!-- CARDS -->
      <div class="grid grid-cols-2 gap-8 pl-2 pr-4 pb-4 overflow-auto h-110">
        <% @spots.each do |spot| %>
          <div class="border border-black shadow-golden w-56 h-68 mb-4 mx-auto text-sm">
            <div class="relative">
              <% spot.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class:'border-b border-black h-40' %>
              <% end %>
              <div class="absolute right-2 top-2 category-card"><%= spot.category %></div>
            </div>
              <div class="p-2">
                <h2 class="mb-2"><%= spot.name %></h2>
                <p class="mb-2"><%= spot.description %></p>
              </div>
          </div>
        <% end %>
      </div>
      <!-- CARDS -->

    </div>

    <!-- MAP -->
    <div class="w-1/2">
      <%= render 'shared/map' %>
    </div>
    <!-- MAP -->
  </div>
</div>

